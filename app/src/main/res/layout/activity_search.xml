<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.preetika.paystay.Search"
    android:fillViewport="true">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="com.example.preetika.paystay.Search">
        <TextView
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="What are you looking for ?"
            android:id="@+id/textViewwhat"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/button23"
            android:layout_alignEnd="@+id/button23" />

        <Spinner

            android:background="@drawable/red_button"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:id="@+id/spinner"

            android:entries="@array/loc"


            android:layout_marginTop="87dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:background="@drawable/red_button"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:id="@+id/spinner2"
            android:entries="@array/gender"

            android:layout_below="@+id/spinner"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Spinner
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:id="@+id/spinner3"
            android:entries="@array/price"

            android:background="@drawable/red_button"
            android:layout_below="@+id/spinner2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:onClick="Search"
            android:background="@drawable/red_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/button23"
            android:layout_below="@+id/spinner3"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp" />

        <Button
            android:background="@drawable/red_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View All"
            android:onClick="ViewAll"
            android:id="@+id/btnViewAll"
            android:layout_alignTop="@+id/button23"
            android:layout_toRightOf="@+id/textViewwhat"
            android:layout_toEndOf="@+id/textViewwhat" />
    </RelativeLayout>
</ScrollView>